<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="in.teachcoder.journalapp.AddEntryActivity">
    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title of your entry"/>
    <EditText
        android:id="@+id/add_entry_title"
        android:hint="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highlight of the day"/>
    <EditText
        android:id="@+id/add_entry_highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe your day in a line"/>
    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write in detail how was your day?"/>
    <EditText
        android:id="@+id/add_entry_content"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/add_entry_button"
        android:layout_gravity="right"
        android:text="Add Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
